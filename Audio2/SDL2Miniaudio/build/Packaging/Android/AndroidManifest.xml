<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.libsdl.app">
    <application
            android:label="@string/main_activity">
        <activity android:name="SDLActivity"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            	android:launchMode="singleTask"
            	android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<!--Our app supports any aspect ratio, no matter how big. So just set it to some very big value. 
		    Additional information:
		    https://stackoverflow.com/questions/44197453/android-black-bar-below-status-bar-what-is-it
		    https://android-developers.googleblog.com/2017/03/update-your-app-to-take-advantage-of.html
		    https://developer.android.com/guide/practices/screens_support#MaxAspectRatio -->
		<meta-data android:name="android.max_aspect" android:value="5.0" />
    </application>
    <uses-feature android:glEsVersion="0x00020000"/>
    <uses-sdk android:minSdkVersion="5"
			  android:targetSdkVersion="25"/>
</manifest>
